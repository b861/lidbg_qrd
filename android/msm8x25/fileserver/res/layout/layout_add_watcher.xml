<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView android:id="@+id/lo_iv_watcher"
		android:layout_width="fill_parent" android:layout_height="45dip"
		android:layout_gravity="center_vertical" android:adjustViewBounds="true"
		android:src="@drawable/icon" android:layout_weight="4" />

	<DigitalClock android:layout_width="fill_parent"
		android:layout_height="match_parent" android:text="@string/xm_clock_format"
		android:textStyle="bold" android:textColor="#0000ff"
		android:focusable="false" android:background="#0066CC"
		android:gravity="center_horizontal" android:layout_weight="4"></DigitalClock>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="match_parent">
		<TextView android:layout_width="fill_parent"
			android:layout_height="match_parent" android:layout_weight="3"
			android:text="@string/xmstr_wt_ct" android:gravity="center_vertical"
			android:background="#330022" />
		<EditText android:id="@+id/xmedwt_cputmp"
			android:layout_width="fill_parent" android:layout_height="match_parent"
			android:layout_weight="2" android:numeric="integer" android:hint="CPU温度高于:"
			android:gravity="left" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="match_parent">
		<TextView android:layout_width="fill_parent"
			android:layout_height="match_parent" android:layout_weight="3"
			android:text="@string/xmstr_wt_phonenum" android:gravity="center_vertical"
			android:background="#330022" />
		<EditText android:id="@+id/xmedwt_phonenum"
			android:layout_width="fill_parent" android:layout_height="match_parent"
			android:layout_weight="2" android:inputType="phone" android:hint="手机号码:"
			android:gravity="left" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="match_parent">
		<TextView android:layout_width="fill_parent"
			android:layout_height="match_parent" android:layout_weight="3"
			android:text="@string/xmstr_wt_limitsmscount" android:gravity="center_vertical"
			android:background="#330022" />
		<EditText android:id="@+id/xmedwt_allcount"
			android:layout_width="fill_parent" android:layout_height="match_parent"
			android:layout_weight="2" android:numeric="integer" android:hint="限制watcher总短信次数:"
			android:gravity="left" />


	</LinearLayout>

</LinearLayout>